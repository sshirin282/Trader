<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <include
        android:id="@+id/tollb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/tool"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview1"
        android:layout_below="@id/tollb"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
    <TextView
        android:layout_below="@id/tollb"
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Predict weekly thursday NIFTY(Cash) level during contest is live."
        android:textSize="15dp"
        android:layout_toRightOf="@id/imageview1"/>

    <ImageView
        android:id="@+id/imageview2"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:layout_below="@id/imageview1"/>
    <TextView
        android:id="@+id/textview2"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1"
        android:layout_toRightOf="@id/imageview2"
        android:textSize="15dp"
        android:text="Contest page will start on friday morning and will end on wednesday night."/>

    <ImageView
        android:id="@+id/imageview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:layout_below="@id/imageview2"
        android:layout_marginTop="18dp"/>
    <TextView
        android:textStyle="bold"
        android:layout_toRightOf="@id/imageview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview3"
        android:textSize="15dp"
        android:text="Winners can submit and re-submit unlimited times of prediction during contest is live."
        android:layout_below="@id/textview2"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview3"
        android:layout_marginTop="19dp"
        android:id="@+id/imageview4"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:text="Our team will contact the winners for prizes."
        android:id="@+id/textview4"
        android:layout_below="@id/textview3"
        android:layout_toRightOf="@id/imageview4"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview5"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:layout_below="@id/imageview4" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/textview5"
        android:layout_marginTop="4dp"
        android:layout_below="@id/textview4"
        android:layout_toRightOf="@+id/imageview5"
        android:text="Everyone can see people's prediction until thursday NIFTY expiry and winners will be declared based on prediction. It is fullytransparent system."/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview6"
        android:layout_marginTop="58dp"
        android:layout_below="@id/imageview4"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview6"
        android:layout_toRightOf="@id/imageview5"
        android:layout_below="@id/textview5"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:text="Top 3 weekly winners (+ - 10 range or close to...) will get technical analysis book."/>




</RelativeLayout>